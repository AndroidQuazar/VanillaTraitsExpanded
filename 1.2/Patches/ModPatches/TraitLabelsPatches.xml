<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[KV] Consolidated Traits</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="RCT_AnimalHater"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Animal abhorrent</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="RCT_AnimalLover"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Animal aficionado</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="RCT_Dunce"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Dullard</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="RCT_Perfectionist"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Idealist</label>		
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[1.2] Psychology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="Prude"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Puritan</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="Insomniac"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Sleepless</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="Desensitized"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Hardened</label>		
					</value>
				</li>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="HeavySleeper"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Sound sleeper</label>		
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[SYR] Individuality</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace"> 
					<xpath>/Defs/TraitDef[defName="SYR_Perfectionist"]/degreeDatas/li[1]/label</xpath>
					<value>
						<label>Idealist</label>		
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
